generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"  // agar MySQL use karna ho, change to "mysql"
  url      = env("DATABASE_URL")
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime?
  image       String?
  createdAt   DateTime @default(now())
}



model Donation {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  amount    Float
  type      String
  payment   String
  status    String   @default("Completed")  // <- Ye line honi chahiye
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  status      String
  description String?
  location    String?
  progress    Int?
  budget      Float?
  raised      Float?
  expected    DateTime 
  pm          String?   // project manager
  createdAt   DateTime  @default(now())
}

model Event {
  id          Int      @id @default(autoincrement())
  tag         String
  title       String
  description String
  location    String
  date        DateTime
  time        String     // changed from Time to String
  progress    Int
  attendees   Int
  pm          String
  createdAt   DateTime @default(now())
}

model Member {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phone       String
  address     String
  membership  String   // e.g., "Premium", "Basic", "Lifetime"
  status      String   @default("Active")  // e.g., Active / Inactive
  role        String   @default("Member")  // e.g., Admin / Member / Volunteer
  createdAt   DateTime @default(now())
}

model PujaBooking {
  id        Int      @id @default(autoincrement())
  puja      String
  client    String
  date      DateTime
  time      String
  location  String
  phone     String
  amount    Float
  status    String   @default("pending") // optional default value
  createdAt DateTime @default(now())
}


model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

